# ls aliases
alias ll='ls -alF'
alias llh='ls -alFh'
alias la='ls -A'
alias l='ls -CF'
alias ld='ls -al --color=always | grep ^d'
alias lr='ls -lart'
alias ldlast='ls -al --color=always --group-directories-first  | tac'

# meta fun!
alias srcme='source C:\\Users\\myuser\\.bashrc'  ## if you make changes to .bashrc or any other bash things, this reloads your profile
alias prosrc='source C:\\Users\\myuser\\.bash_profile'

# git
alias master='git checkout master'
alias main='git checkout main'
